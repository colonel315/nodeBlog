extends layout

block content
    div.row
        div.col-sm-11.col-med-11.col-lg-11
            h1.h1= title
            br
            form(method='POST', action='/users/register')
                #form-group
                    label First Name:
                    input.form-control(name='fname', type='text')
                #form-group
                    label Last Name:
                    input.form-control(name='lname', type='text')
                #form-group
                    label Email:
                    input.form-control(name='email', type='text')
                #form-group
                    label Username:
                    input.form-control(name='username', type='text')
                #form-group
                    label Password:
                    input.form-control(name='password', type='password')
                #form-group
                    label Confirm Password:
                    input.form-control(name='password2', type='password')
                br
                input.btn.btn-primary(type="submit", value="Submit")
